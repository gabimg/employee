@model HomeDetailsViewModel

@{
    ViewBag.Title = "Employee Details";
    var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "noimage.jpg");
}

<div class="row justify-content-center m-3 employee-details">
    <div class="col-sm-8">
        <div class="card">

            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="text-center">

                <div class="employeePhoto">
                    <img src="@photoPath" asp-append-version="true" />
                </div>

                <h4 class="mt-2">Employee ID: @Model.Employee.Id</h4>
                <h4>Email: @Model.Employee.Email</h4>
                <h4 class="mb-2">Department: @Model.Employee.Department</h4>

            </div>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary m-1">Back</a>
                <a asp-controller="home" asp-action="edit" asp-route-id="@Model.Employee.Id" class="btn btn-primary m-1">Edit</a>
                <a asp-controller="home" asp-action="delete" asp-route-id="@Model.Employee.Id" class="btn btn-danger m-1">Delete</a>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}
